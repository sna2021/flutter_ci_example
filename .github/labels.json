{
  "labels": {
    "ios": {
      "name": "ios",
      "colour": "#00ff00",
      "description": "IOS folder changed"
    },
    "android": {
      "name": "android",
      "colour": "#00ff00",
      "description": "Android folder changed"
    },
    "fix": {
      "name": "fix",
      "colour": "#00ff00",
      "description": "FIX"
    },
    "feature": {
      "name": "feature",
      "colour": "#00ff00",
      "description": "FEATURE"
    }
  },
  "pr": {
    "ios": {
      "requires": 1,
      "conditions": [
        {
          "type": "filesMatch",
          "glob": "ios/*"
        }
      ]
    },
    "android": {
      "requires": 1,
      "conditions": [
        {
          "type": "filesMatch",
          "glob": "android/*"
        }
      ]
    },
    "fix": {
      "requires": 1,
      "conditions": [
        {
          "type": "branchMatches",
          "pattern": "feature/*"
        },
        {
          "type": "branchMatches",
          "pattern": "features/*"
        }
      ]
    },
    "feature": {
      "requires": 1,
      "conditions": [
        {
          "type": "branchMatches",
          "pattern": "fix/*"
        },
        {
          "type": "branchMatches",
          "pattern": "hotfix/*"
        }
      ]
    }
  }
}