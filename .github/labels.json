{
  "pr": {
    "web": {
      "requires": 1,
      "conditions": [
        {
          "type": "filesMatch",
          "glob": "web/**/*"
        },
        {
          "type": "filesMatch",
          "glob": "web/*"
        }
      ]
    },
    "feature": {
      "requires": 1,
      "conditions": [
        {
          "type": "branchMatches",
          "pattern": "^features\\/"
        },
        {
          "type": "branchMatches",
          "pattern": "^feature\\/"
        }
      ]
    },
    "fix": {
      "requires": 1,
      "conditions": [
        {
          "type": "branchMatches",
          "pattern": "^fix\\/"
        },
        {
          "type": "branchMatches",
          "pattern": "^hotfix\\/"
        }
      ]
    }
  }
}